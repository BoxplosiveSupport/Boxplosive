@using System.Web.Mvc.Html
@using nl.boxplosive.BackOffice.Mvc.Areas.Admin.Models

@model TemplateEditModel
@{
    ViewBag.Title = @Model.PageTitle;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Version)
    @Html.HiddenFor(model => model.Type)

    <div class="form-horizontal">
        <div class="well">
            <div class="form-group">
                @Html.LabelFor(model => model.Type, new { @class = "col-sm-3" })
                <div class="col-sm-5">
                    @Html.DisplayFor(model => model.Type)
                </div>
            </div>

            @Html.EditorFor(model => model.Title, new { labelClass = "col-sm-3", textboxClass = "col-sm-5" })

            @Html.EditorFor(model => model.Json, "MultilineText", new { labelClass = "col-sm-3", rows = 8 })
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}