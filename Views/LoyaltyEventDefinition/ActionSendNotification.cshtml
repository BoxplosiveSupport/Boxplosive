@model nl.boxplosive.BackOffice.Mvc.Models.LoyaltyEventDefinition.LoyaltyEventDefinitionModel

@{
    bool notificationIdHasError = !ViewData.ModelState.IsValidField(Model.Field_NotificationId);
}

<div class="form-group">
    @Html.LabelFor(m => m.NotificationId, new { @class = "col-sm-3 control-label" })
    <div class="col-sm-5 @Html.Raw(notificationIdHasError ? "has-error" : "")">
        @Html.DropDownListFor(m => m.NotificationId, true, Model.Notifications, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NotificationId, "", new { @class = "text-danger" })
    </div>
</div>