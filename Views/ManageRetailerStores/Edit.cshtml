@using nl.boxplosive.BackOffice.Mvc.Helpers
@model nl.boxplosive.BackOffice.Mvc.Models.ManageRetailerStores.RetailerStoreModel

@{
    ViewBag.Title = @Model.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";

    string pageTitle = Model.Id == 0 ? "Create" : "Edit";
}

<h2>@pageTitle</h2>
<div id="retailerStoreEdit">
    @using (Html.BeginForm(MVC.ManageRetailerStores.ActionNames.Edit, MVC.ManageRetailerStores.Name, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken();
        <div class="well">
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.RetailerId)
            @Html.HiddenFor(m => m.AccountId)
            @Html.HiddenFor(m => m.StoreInfo.Id)
            @Html.HiddenFor(m => m.StoreInfo.RetailerId)
            @Html.HiddenFor(m => m.StoreInfo.RetailerStoreId)
            @Html.EditorFor(m => m.Name)
            @Html.EditorFor(m => m.Number)
            @Html.EditorFor(m => m.Type, new { optionLabel = "Select type", labelClass = "col-sm-4", inputContainerClass = "col-sm-4" })
            @Html.EditorFor(m => m.Latitude)
            @Html.EditorFor(m => m.Longitude)
            @Html.EditorFor(m => m.StoreInfo.StoreName)
            @Html.EditorFor(m => m.StoreInfo.AddressLine1)
            @Html.EditorFor(m => m.StoreInfo.AddressLine2)
            @Html.EditorFor(m => m.StoreInfo.Zipcode)
            @Html.EditorFor(m => m.StoreInfo.City)
            @Html.EditorFor(m => m.StoreInfo.Country)
            @Html.EditorFor(m => m.StoreInfo.TelephoneNumber)
        </div>
        <div class="well">
            @Html.EditorFor(m => m.StoreDates, "StoreDates")
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <input id="edit-submit" type="submit" class="btn btn-default" value="Confirm" />&nbsp;
                @Html.ActionLink("Cancel", MVC.ManageRetailerStores.ActionNames.Index, MVC.ManageRetailerStores.Name, new { @class = "btn btn-link" })
            </div>
        </div>
    }
</div>
