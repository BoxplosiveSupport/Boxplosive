@model nl.boxplosive.BackOffice.Mvc.Models.ManageRetailerStores.RetailerStoreModel

@{
    ViewBag.Title = Model.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>
<div id="retailerStoreDelete">
    @using (Html.BeginForm(MVC.ManageRetailerStores.ActionNames.Delete, MVC.ManageRetailerStores.Name, FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.HiddenFor(m => m.Id);
        @Html.HiddenFor(m => m.RetailerId);
        <div class="form-group">
            <p>Do you want to delete retailer store <b>@Model.Name</b>?</p>
        </div>
        <div class="form-group">
            <input id="delete-submit" type="submit" class="btn btn-default" value="Confirm" />
            @Html.ActionLink("Cancel", MVC.ManageRetailerStores.ActionNames.Index, MVC.ManageRetailerStores.Name)
        </div>
    }
</div>
