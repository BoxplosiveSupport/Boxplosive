@{
  ViewBag.Title = @Model.PageTitle;
}
<div class="row"
     data-partialsteps
     data-get="CreatePartialReturnHTML?file=~/Ajax-Stub/createloyalty"
     data-post="CreatePartialReturnHTML?file=~/Ajax-Stub/createloyalty"
     data-exitmessage="Unsaved changed will be lost.">
  <div class="col-sm-3">
    <nav class="sticky"
         data-partial="status"
         data-partialid="statuslist"
         data-get="ReturnHTML?file=~/Ajax-Stub/createloyalty-StatusList.html">
      <div class="panel panel-secondary">
        <div class="panel-body">
          <h2 class="panel-color">Loyalty</h2>
          <ol class="status-list">
            <li><a href="#datapanel-basics">Basics <span class="icon icon-check pull-right"></span></a></li>
            <li><a href="#datapanel-savings">Savings <span class="icon icon-check pull-right"></span></a></li>
          </ol>
          <a href="" class="btn btn-success btn-block">Continue later</a>
          <a href="" class="btn btn-success btn-block disabled">Ready to publish</a>
          <button class="btn btn-primary btn-block" data-toggle="modal" data-target="#saveastemplate">Save as template</button>
        </div>
        <a href="#primaryheader" type="button" class="tosticky text-center icon icon-actions"></a>
      </div>
    </nav>
  </div>
  <main class="col-sm-9">
    <form id="datapanel-savings"
          data-partial="step"
          data-partialid="Savings"
          data-mode="savings">
      <section class="datapanel" data-action="edit">
        <div class="datapanel-heading">
          <h2>2. Savings</h2>
          <div class="actions">
            <button type="button" class="icon-btn icon-edit" data-action="edit"><span class="sr-only">Edit</span></button>
          </div>
        </div>
        <div class="datapanel-body">
          <p class="text-muted">Click to enter data</p>
        </div>
      </section>
    </form>
  </main>

</div>

<div class="modal fade" id="saveastemplate" tabindex="-1" role="dialog" aria-hidden="true" data-post="ReturnJSON?file=~/Ajax-Stub/test.json">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="saveastemplate">Save as template</h4>
      </div>
      <div class="modal-body">
        <form class="form" action="">
          <div class="form-group">
            <label>Please enter a unique name for this new template.</label>
            <input type="text" name="templatename" class="form-control" data-rule-required="true" required />
          </div>
          <button type="submit" class="btn btn-primary">Save now</button>
        </form>
      </div>
    </div>
  </div>
</div>


