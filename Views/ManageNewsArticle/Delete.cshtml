@model nl.boxplosive.BackOffice.Mvc.Models.ManageNewsArticle.NewsArticleModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<div id="newsArticleDelete">
    @using (Html.BeginForm(MVC.ManageNewsArticle.ActionNames.Delete, MVC.ManageNewsArticle.Name, FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.HiddenFor(m => m.Id);

        <div class="form-group">
            <p>Do you want to delete news article <b>@Model.Title</b>?</p>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Confirm" />
            @Html.ActionLink("Cancel", MVC.ManageNewsArticle.ActionNames.Index, MVC.ManageNewsArticle.Name)
        </div>
    }
</div>