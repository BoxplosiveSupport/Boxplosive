@using System.Web.Mvc.Html
@using nl.boxplosive.BackOffice.Mvc.Models.LanguageMessageGroup

@model LanguageMessageGroupEditModel
@{
    ViewBag.Title = @Model.PageTitle;
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Version)
    @Html.HiddenFor(model => model.Page)
    @Html.HiddenFor(model => model.Id)
    <div class="form-horizontal">
        <div id="LoyaltyEventDefinitionForm" class="well">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-5">
                    @Html.HiddenFor(model => model.Name)
                    @Html.DropDownListFor(model => model.Name, true, Model.Names, "Select name", new { @class = "form-control", @disabled = "disabled", readOnly = true })
                </div>
            </div>
            @Html.EditorFor(m => m.Active, "CustomBoolean")
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Cancel", MVC.LanguageMessageGroup.ActionNames.Index, MVC.LanguageMessageGroup.Name, null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
