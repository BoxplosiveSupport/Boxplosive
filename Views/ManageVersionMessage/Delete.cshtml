@model nl.boxplosive.BackOffice.Mvc.Models.ManageVersionMessage.VersionMessageModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Startup Message</h2>

<div id="greetingMessageDelete">
    @using (Html.BeginForm(MVC.ManageVersionMessage.ActionNames.Delete, MVC.ManageVersionMessage.Name, FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.HiddenFor(m => m.AppVersion)

        <div class="form-group">
            <p>
                Do you want to delete this Startup Message?<br /><br />
                <b>@Model.AppVersion</b><br />
                <b>@Model.AlertMessage</b><br />
                <b>@Model.ErrorMessage</b><br />
            </p>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Confirm" />
            @Html.ActionLink("Cancel", MVC.ManageVersionMessage.ActionNames.Index, MVC.ManageVersionMessage.Name)
        </div>
    }
</div>